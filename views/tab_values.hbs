<table id="tab_values" class="display" style="width: 100%;">
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>Id sensor</th>
            <th>Wine</th>
            <th>Humidity</th>
            <th>Temperature</th>
            <th>Lux</th>
        </tr>
    </thead>
    <!-- Aggiungere colonna: x o v, nome vino -->
    <tbody>
        {{#each _locals}}
            <tr>
                <td data-sort={{orderDate timestamp}}>{{parseDate timestamp}}</td>
                <td>{{id_sensor}}</td>
                <td>{{name}}</td>
                <td>{{humidity}}%{{#if (confHum humidity t_humidity)}}
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#00FF00" class="bi bi-check" viewBox="0 0 16 16">
                            <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
                        </svg>
                    {{else}}
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#FF0000" class="bi bi-x" viewBox="0 0 16 16">
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                        </svg>
                    {{/if}}</td>
                <td>{{temperature}}Â°{{#if (confTemp temperature t_temperature)}}
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#00FF00" class="bi bi-check" viewBox="0 0 16 16">
                            <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
                        </svg>
                    {{else}}
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#FF0000" class="bi bi-x" viewBox="0 0 16 16">
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                        </svg>
                    {{/if}}</td>
                <td>{{lux}}{{#if (confLux lux t_lux)}}
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#00FF00" class="bi bi-check" viewBox="0 0 16 16">
                            <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
                        </svg>
                    {{else}}
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#FF0000" class="bi bi-x" viewBox="0 0 16 16">
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                        </svg>
                    {{/if}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

<script>
    new DataTable('#tab_values',{
        order: [[0,'desc']]
    });
</script>